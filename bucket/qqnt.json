    "installer": {
        "script": [
            "$configpath = \"$env:PUBLIC\\Documents\\Tencent\\QQ\"",
            "if (!(Test-Path -Path \"$configpath\")) {",
            "    New-Item -Path \"$configpath\" -Type Directory -Force | Out-Null",
            "}",
            "if (!(Test-Path -Path \"$configpath\\UserDataInfo.ini\" -PathType leaf)) {",
            "    Set-Content -NoNewline -Path \"$configpath\\UserDataInfo.ini\" -Value \"[UserDataSet]`nUserDataSavePathType=2`nUserDataSavePath=`\"$persist_dir\\Tencent Files`\"\"",
            "}"
        ]
    },
    "shortcuts": [
        [
            "Files\\QQ.exe",
            "QQ"
        ]
    ],
    "persist": "Tencent Files",
    "uninstaller": {
        "script": "Remove-Item -Path \"$env:PUBLIC\\Documents\\Tencent\" -Recurse -Force | Out-Null"
    },
    "checkver": {
        "script": [
            "$url = 'https://im.qq.com/pcqq/index.shtml'",
            "$resp = Invoke-WebRequest -Uri $url",
            "$cont = $resp.Content",
            "$pattern = 'cdn-go.cn/qq-web.*windows.*.js'",
            "$jsUrl = 'https://' + [regex]::Match($cont, $pattern).Value",
            "Invoke-WebRequest -Uri $jsUrl"
        ],
        "regex": "([\\d\\w]+.qq.com)/qqfile/qq/QQNT/Windows/QQ_([\\d\\.]+)_([\\d]+)_x86_01.exe",
        "replace": "${2}.${3}"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://$match1/qqfile/qq/QQNT/Windows/QQ_$match2_$match3_x64_01.exe#/dl.7z"
            },
            "32bit": {
                "url": "https://$match1/qqfile/qq/QQNT/Windows/QQ_$match2_$match3_x86_01.exe#/dl.7z"
            },
            "arm64": {
